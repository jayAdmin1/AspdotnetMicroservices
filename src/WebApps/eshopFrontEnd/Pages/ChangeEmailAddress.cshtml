@page
@model eshopFrontEnd.Pages.ChangeEmailAddressModel
@{
    ViewData["Title"] = "ChangeEmailAddress";
}

<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item"><a href="login.html"> Login</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Change EmailAddress</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card" style="max-width:40%">
                <div class="card-header bg-primary text-white">
                    Change EmailAddress
                </div>
                <div class="card-body">
                    <form asp-page-handler="ChangeUserEmail" method="post" >
                        <div class="form-group">
                            <label for="@nameof(UserChangeEmailAddressModel.OldEmailAddress)">Old EmailAddress</label>
                            <input asp-for="UserChangeEmailAddressModel.OldEmailAddress" class="form-control" placeholder="Enter old email" >
                            <span asp-validation-for="UserChangeEmailAddressModel.OldEmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="@nameof(UserChangeEmailAddressModel.NewEmailAddress)">New EmailAddress</label>
                            <input asp-for="UserChangeEmailAddressModel.NewEmailAddress" class="form-control" placeholder="Enter new email">
                            <span asp-validation-for="UserChangeEmailAddressModel.NewEmailAddress" class="text-danger"></span>
                        </div>
                        <div class="mx-auto">
                            <button type="submit" class="btn btn-primary text-right">Submit</button> Or
                            <a class="" asp-area="" asp-page="/Login">Try to Login!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
