@page
@model CreateNewUserAccountModel
@{
    ViewData["Title"] = "CreateNewUserAccount";
}
<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item"><a href="login.html"> Login</a></li>
                    <li class="breadcrumb-item active" aria-current="page">New User</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card" style="max-width:40%">
                <div class="card-header bg-primary text-white">
                    <i class="fa fa-envelope"></i> Create User
                </div>
                <div class="card-body">
                    <form asp-page-handler="AddUser" method="post">
                        <div class="form-group">
                            <label for="username">Name</label>
                            <input type="text" class="form-control" id="Name" name="@nameof(Model.user.Name)" placeholder="Enter Name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" class="form-control" id="EmailAddress" name="@nameof(Model.user.EmailAddress)" placeholder="Enter email" required>
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <textarea class="form-control" id="Address" name="@nameof(Model.user.Address)" rows="3" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="mobileno">MobileNo</label>
                            <input type="text" class="form-control" id="MobileNo" name="@nameof(Model.user.MobileNo)" placeholder="Enter mobile no" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="Password" name="@nameof(Model.user.Password)" placeholder="Enter password" required>
                        </div>
                        <div class="mx-auto">
                            <button type="submit" class="btn btn-primary text-right">Submit</button> Or 
                            <a class="" asp-area="" asp-page="/Login">Try to Login!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>