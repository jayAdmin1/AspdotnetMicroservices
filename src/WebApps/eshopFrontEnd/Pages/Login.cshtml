@page
@model eshopFrontEnd.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Login</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card" style="max-width:50%">
                <div class="card-header bg-primary text-white">
                    Login
                </div>
                <div class="card-body">
                    <form asp-page-handler="LoginUser" method="Post">

                        <div class="form-group">
                            <label for="@nameof(UserLoginModel.EmailAddress)">Email address</label>
                            <input asp-for="userLogin.EmailAddress" class="form-control" placeholder="Enter the Email Address"></input>
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            <span asp-validation-for="userLogin.EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="name">Password</label>
                            <input asp-for="userLogin.Password" type="password" class="form-control" placeholder="Enter the Password"></input>
                            <span asp-validation-for="userLogin.Password" class="text-danger"></span>
                        </div>
                        <div class="mx-auto">
                            <button type="submit" class="btn btn-primary text-right">Login</button> Or
                            <a asp-page="/CreateNewUserAccount">New User? Create an account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-4">
            <div class="card bg-light mb-3">
                <div class="card-header bg-success text-white text-uppercase"><i class="fa fa-home"></i> Additional Links</div>
                <div class="card-body">
                    <ul>
                        <li><a href="changepassword">Change Password</a></li>
                        <li><a href="ChangeEmailAddress">Change Email Address</a></li>
                        <li><a href="ChangeUserAccountDetails">Update User Profile Details</a></li>
                    </ul>

                </div>

            </div>
        </div>
    </div>
</div>